{% extends 'base.html.twig' %}

{% block title %}Hello DesactiverSupprimerParticipantsController!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Participant Liste</h1>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Pseudo</th>
            <th>Actif</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Telephone</th>
            <th>Administrateur</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>
                    {% if participant.actif %}
                        {{ participant.actif ? 'Oui' : 'No' }} - <a href="{{ path('participant_desactiver', {'id':
                        participant.id}) }}" onclick="return confirm('Désactiver participant?')">Désactiver</a>
                    {% else %}
                        {{ participant.actif ? 'Oui' : 'No' }} - <a href="{{ path('participant_activer', {'id':
                        participant.id}) }}" onclick="return confirm('Activer participant?')">Activer</a>
                    {% endif %}
                </td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.administrateur ? 'Oui' : 'No' }}</td>
                <td>
                    <a href="{{ path('participant_supprimer', {'id': participant.id}) }}" onclick="return confirm
                    ('Êtes-vous sûr?')">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
